    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="@dimen/expandable_child_font_size"
        android:textStyle="bold"
        android:id="@+id/changesExplorerChildLabel"
    />

    <TextView
        android:layout_width="wrap_content"
