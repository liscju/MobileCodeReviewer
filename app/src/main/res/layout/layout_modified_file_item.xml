<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <TextView
        android:textSize="@dimen/common_medium_font_size"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="New Text asdasd asasdas adsa sdasdasdasdasd asdasda sd"
        android:id="@+id/fileName"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:minHeight="@dimen/common_big_line_height"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:id="@+id/added"
        android:background="@drawable/rectangle_background_green"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_centerInParent="true"
        android:maxWidth="80dp"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:id="@+id/deleted"
        android:background="@drawable/rectangle_background_red"
        android:layout_toLeftOf="@id/added"
        android:layout_centerInParent="true"
        android:maxWidth="80dp"
        />


</RelativeLayout>